{% extends 'QuartetKakarotBundle::base.html.twig' %}

{% block headline %}ユーザー情報　削除{% endblock headline %}

{% block content_row %}
    <div class="container">
        <div class="contents">

            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th>氏名</th>
                        <td>{{ entity.name }}</td>
                    </tr>
                    <tr>
                        <th>ログイン名</th>
                        <td>{{ entity.username }}</td>
                    </tr>
                </tbody>
            </table>

            {{ form(delete_form) }}
            <br>
            <a href="{{ path('user_edit', { 'id': entity.id }) }}" class="btn btn-info" role="button">編集</a>
            <br>
            <br>
            <a href="{{ path('user') }}" class="btn btn-warning" role="button">一覧に戻る</a>
        </div>
    </div>
{% endblock content_row %}